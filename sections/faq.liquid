<h1>{{section.settings.heading}}</h1>


{% for block in section.blocks %}
    {% if block.type == 'QA' %}
        <h3>{{block.settings.question}}</h3>
        <p>{{block.settings.answer}}</p>
    {% elsif block.type == 'headline' %}
        <h1>{{block.settings.title}}</h1>
    {% endif %}

{% endfor %}



{% schema %}
{
    "name": "Customer Questions",
    "settings": [
        {
            "type":"text",
            "label": "Heading for FAQ",
            "id":"heading"
        }
        
    ],
    "blocks": [
        {
            "type":"QA",
            "name":"Question/Answer",
            "settings": [
                {
                    "type":"text",
                    "label": "Question: (Internal)",
                    "id":"title"
                },
                {
                    "type":"text",
                    "label": "Customer Questions",
                    "id":"question"
                },
                {
                    "type":"richtext",
                    "label": "Answer",
                    "id":"answer"
                }

            ]
        },
        {
            "type":"headline",
            "name":"Headline",
            "settings": [
                {
                    "type":"text",
                    "label": "headline",
                    "id":"title"
                }
            ]
        }
    ]
}
{% endschema %}